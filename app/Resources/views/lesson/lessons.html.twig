{% extends 'base.html.twig' %}

{% block bodyClass %}
    hold-transition register-page
{% endblock %}

{% block body %}
    <h1 class="text-center">Lessons</h1>

    <div class="container">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Summary</th>
                <th>See Lesson</th>
                <th>Writer</th>
                <th>Edit</th>
            </tr>
        {% for lesson in lessons %}
            <tr>
                <td>{{ lesson.title }}</td>
                <td>{{ lesson.summary }}</td>
                <td><a href="{{ path('lesson_show', { 'id': lesson.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
                <td>{{ lesson.writer.username }}</td>
                <td><a href="{{ path('lesson_edit', { 'id': lesson.id }) }}"><span class="glyphicon glyphicon-edit"></span></a></td>
            </tr>
        {% endfor %}
        </table>

        <div class="login_center">
            <button class="btn btn-default login_btn"><a href="{{ path('homepage') }}">Return</a></button>
        </div>
    </div>
{% endblock %}
