{% extends 'base.html.twig' %}

{% block bodyClass %}
    hold-transition register-page
{% endblock %}

{% block body %}
    <h1 class="text-center">Register</h1>

    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="box-body">
                <div class="form-group row">
                    {{ form_label(form.username, 'Username :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.email, 'Email :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.plainPassword.first, 'Password :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.plainPassword.second, 'Password (repeat) :', {'label_attr': {'class': 'col-md-2 control-label'}}) }}
                    <div class="col-md-9">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="login_center">
                    <button type="submit" class="btn btn-primary login_btn">Register</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}